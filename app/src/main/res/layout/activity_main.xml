<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:id="@+id/activityMainTableLayout">

        <!-- Row 1 with single column -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:tag="NewTrip">

            <TextView
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="New trip"  android:layout_span="1"
                android:padding="18dip" android:background="#b0b0b0"
                android:textColor="#000" android:gravity="center_horizontal"
                android:layout_weight="1" android:layout_margin="1dp"
                android:id="@+id/NewTripView"/>

        </TableRow>

        <!-- Row 2 with single column -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:onClick="onClick"
            android:tag="Trips">

            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Trip groups"  android:layout_span="1"
                android:padding="18dip" android:background="#b0b0b0"
                android:textColor="#000" android:gravity="center_horizontal"
                android:layout_weight="1" android:layout_margin="1dp"/>

        </TableRow>

        <!-- Row 3 with single column -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Settings"  android:layout_span="1"
                android:padding="18dip" android:background="#b0b0b0"
                android:textColor="#000" android:gravity="center_horizontal"
                android:layout_weight="1" android:layout_margin="1dp"/>

        </TableRow>

        <!-- Row 4 with single column -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="Help"  android:layout_span="1"
                android:padding="18dip" android:background="#b0b0b0"
                android:textColor="#000" android:gravity="center_horizontal"
                android:layout_weight="1" android:layout_margin="1dp"/>

        </TableRow>

        <!-- Row 5 with single column -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18dp" android:text="About"  android:layout_span="1"
                android:padding="18dip" android:background="#b0b0b0"
                android:textColor="#000" android:gravity="center_horizontal"
                android:layout_weight="1" android:layout_margin="1dp"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>
